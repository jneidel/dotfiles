# ncmpcpp bindings
## movement (vim keys)
def_key "j"
    scroll_down
def_key "k"
    scroll_up
def_key "h"
    previous_column
def_key "l"
    next_column


def_key "u"
    page_up
def_key "d"
    page_down

def_key "G"
  move_end
def_key "g"
  move_home

def_key "h"
  jump_to_parent_directory
def_key "l"
  enter_directory

def_key "l"
  run_action
def_key "l"
  play_item

def_key "n"
    next_found_item
def_key "N"
    previous_found_item

def_key "ctrl-b"
  page_up
def_key "ctrl-f"
  page_down

def_key "i"
 jump_to_playing_song

## view modes
### media
def_key "m"
  show_media_library
def_key "m"
  toggle_media_library_columns_mode

### file browser
def_key "f"
  show_browser
#def_key "f"
#  change_browse_mode

### playlist
def_key "p"
  show_playlist
def_key "P"
  show_playlist_editor

### search
def_key "s"
  show_search_engine
def_key "s"
  start_searching
def_key "r"
  reset_search_engine

def_key "v"
  show_visualizer
def_key "v"
  toggle_visualization_type

def_key "f1"
  show_help
def_key "t"
  show_clock
def_key "@"
  show_server_info
def_key "L"
  show_lyrics

## playback
def_key "space"
  pause

def_key "b"
  next
#def_key "z"
# prev
def_key ">"
  next
def_key "<"
  previous

## volume
def_key "+"
  volume_up
def_key "-"
  volume_down

## playing modes
def_key "r"
  toggle_repeat
def_key "z"
  toggle_random
def_key "y"
  toggle_single
# remove track from playlist after playing
def_key "R"
  toggle_consume

## playlists
### add to playlist
def_key "a"
  add_item_to_playlist
def_key "A"
  add_selected_items

### remove from playlist
def_key "x"
  delete_playlist_items
def_key "c"
  clear_main_playlist
def_key "C"
  clear_playlist

## database
def_key "U"
  update_database

## track position
def_key "L"
  seek_forward
def_key "H"
 seek_backward

def_key "T"
  jump_to_position_in_song


