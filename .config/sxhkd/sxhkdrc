# simple x hotkey daemon config
# systemwide keybindings

super + d
  ~/scripts/rofi/application-start

## start applications
super + Return
  kitty

super + F1 
  firefox-developer-edition
super + F2
  firefox-nightly

super + F5
  kitty --class calcurse calcurse

super + F8
  kitty --class cmus cmus

super + F9
  export QT_STYLE_OVERRIDE=kvantum-dark; keepassxc

super + F3
  kitty --class mosh --name kudu mosh k
super + F4
  kitty --class mosh uber

## pulseaudio
### volume control
XF86AudioMute
  ~/scripts/sxhkd/set-volume.sh mute
XF86AudioLowerVolume
  ~/scripts/sxhkd/set-volume.sh -3
XF86AudioRaiseVolume
  ~/scripts/sxhkd/set-volume.sh +3

### sound mixer
super + ctrl + m
  kitty pulsemixer
super + m
  kitty ncpamixer

## mpd
### playback control
# Also JBL play button, Alt: XF86LaunchA
XF86AudioPlay
  ~/scripts/sxhkd/control-mpd.sh toggle
# Also JBL play double press, Alt: XF86Explorer
XF86AudioNext
  ~/scripts/mpd/mpcc next
# Alt: XF86Search
XF86AudioPrev
  ~/scripts/mpd/mpcc prev

## mac brightness
XF86MonBrightnessUp
  ~/scripts/sxhkd/mac/backlight p +05
XF86MonBrightnessDown
  ~/scripts/sxhkd/mac/backlight p -05

XF86KbdBrightnessUp
  ~/scripts/sxhkd/mac/keyboard-backlight p +1
XF86KbdBrightnessDown
  ~/scripts/sxhkd/mac/keyboard-backlight p -1

## screenshot
# command copied from "alias scrot" in ~/.zsh/apps.zsh
super + p
  /usr/bin/scrot 'screenshot_%Y-%b-%d_%H:%M:%S.png' -e 'mv $f ~/pictures; notify-send \"took screenshot\" -t 1000 -i camera'

## misc
super + n
  wlan
super + y
  ~/scripts/i3/clipboard/clipboard-add-yt-video.sh
super + v
  ~/scripts/open-clip-in-vlc
super + o
  ~/scripts/open-clip-in-browser
super + a
  cnsm-add
super + t
  transmission-add

