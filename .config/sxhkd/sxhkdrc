# simple x hotkey daemon config
# systemwide keybindings

super + d
  ~/scripts/rofi/application-start

super + 0
  ~/scripts/rofi/power-menu

super + ssharp
  blurlock

## start applications
super + Return
  kitty

super + F1
  brave
super + F2
  firefox-nightly

super + F9
  export QT_STYLE_OVERRIDE=kvantum-dark; keepassxc

super + F3
  kitty --class mosh --name kudu mosh k
super + F4
  kitty --class mosh uber

## pulseaudio
### volume control
XF86AudioMute
  ~/scripts/sxhkd/set-volume.sh mute
XF86AudioLowerVolume
  ~/scripts/sxhkd/set-volume.sh -3
XF86AudioRaiseVolume
  ~/scripts/sxhkd/set-volume.sh +3

### sound mixer
super + ctrl + m
  kitty pulsemixer
super + m
  kitty ncpamixer

## mpd
### playback control, 1st for macbook, 2nd for thinkpad
# Also JBL play button
XF86AudioPlay
  ~/scripts/sxhkd/control-mpd.sh toggle
XF86Search
  ~/scripts/sxhkd/control-mpd.sh toggle

# Also JBL play double press
XF86AudioNext
  ~/scripts/sxhkd/control-mpd.sh next
XF86LaunchA
  ~/scripts/sxhkd/control-mpd.sh next

XF86AudioPrev
  ~/scripts/sxhkd/control-mpd.sh prev
XF86Tools
  ~/scripts/sxhkd/control-mpd.sh prev

## mac brightness
XF86MonBrightnessUp
  ~/scripts/sxhkd/mac/backlight p +10
XF86MonBrightnessDown
  ~/scripts/sxhkd/mac/backlight p -10

XF86KbdBrightnessUp
  ~/scripts/sxhkd/mac/keyboard-backlight p +1
XF86KbdBrightnessDown
  ~/scripts/sxhkd/mac/keyboard-backlight p -1

## screenshot
# command copied from "alias scrot" in ~/.zsh/apps.zsh
super + p
  /usr/bin/scrot 'screenshot_%Y-%b-%d_%H:%M:%S.png' -e 'mv $f ~/ct/pictures; notify-send \"took screenshot\" -t 1000 -i camera'

super + P
  /usr/bin/scrot 'screenshot_%Y-%b-%d_%H:%M:%S.png' -u -e 'mv $f ~/ct/pictures; notify-send \"took screenshot\" -t 1000 -i camera'

## misc
super + n
  wlan
super + y
  ~/scripts/i3/clipboard/clipboard-add-yt-video.sh
super + v
  ~/scripts/open-clip-in-vlc
super + o
  ~/scripts/open-clip-in-browser
super + a
  cnsm-add
super + t
  transmission-add
super + z
  open-latest-doc
super + b
  bangs

# which key is this?
XF86Tools
  xtouchpad -t; exec notify-send -t 1500 'toggled keyboard'
# XF86 keys: http://wiki.linuxquestions.org/wiki/XF86_keyboard_symbols
