# simple x hotkey daemon config
# systemwide keybindings

super + d
  ~/scripts/rofi/application-start

super + 0
  ~/scripts/rofi/power-menu

super + ssharp
  ~/scripts/i3/lock/lock

## start applications
super + Return
  kitty

super + F1
  nice -n 19 brave

super + F9
  export QT_STYLE_OVERRIDE=kvantum-dark; keepassxc

super + F3
  kitty --class mosh --name kudu mosh k
super + F4
  kitty --class mosh --name uber mosh -p 44940 u

### websites
alt + F1
  moodle
alt + F2
  lfe
alt + F3
  lfeback

## bspwm
# super + alt + r
#   bspc wm -r

# super + Q
#   bspc node -c
# super + alt + q
#   bspc node -k

# super + {_,shift + }{1-9}
#   bspc {desktop -f,node -d} '^{1-9}'

## pulseaudio
### volume control
XF86AudioMute
  ~/scripts/sxhkd/set-volume mute >/dev/null
XF86AudioLowerVolume
  ~/scripts/sxhkd/set-volume -3 >/dev/null
XF86AudioRaiseVolume
  ~/scripts/sxhkd/set-volume +3 >/dev/null

### sound mixer
super + ctrl + m
  kitty pulsemixer
super + m
  kitty ncpamixer -c ~/.config/ncpamixer/ncpamixer.conf

## mpd
### playback control, 1st for macbook, 2nd for thinkpad
# Also JBL play button
XF86AudioPlay
  ~/scripts/sxhkd/control-mpd toggle
XF86Search
  ~/scripts/sxhkd/control-mpd toggle
XF86Bluetooth
  ~/scripts/sxhkd/control-mpd toggle

# Also JBL play double press
XF86AudioNext
  ~/scripts/sxhkd/control-mpd next
XF86LaunchA
  ~/scripts/sxhkd/control-mpd next
XF86Keyboard
  ~/scripts/sxhkd/control-mpd next
XF86Favorites
  ~/scripts/sxhkd/control-mpd next

XF86AudioPrev
  ~/scripts/sxhkd/control-mpd prev
XF86Tools
  ~/scripts/sxhkd/control-mpd prev

## brightness
XF86MonBrightnessUp
  ~/scripts/sxhkd/backlight p +10 >/dev/null
XF86MonBrightnessDown
  ~/scripts/sxhkd/backlight p -10 >/dev/null


## screenshot
super + p
  ~/scripts/sxhkd/screenshot
super + P
  ~/scripts/sxhkd/screenshot -s

## dunst
super + c
  dunstctl close
super + C
  dunstctl close-all
# super + h
#   dunstctl history-pop

## misc
super + n
  wlan
super + y
  ~/scripts/schedule-yt
super + Y
  ~/scripts/rofi/yt
super + v
  ~/scripts/sxhkd/open_clip_mpv
super + o
  ~/scripts/open-clip-in-browser
super + a
  cnsm-add
super + t
  transmission-add
super + z
  open-latest-doc
super + b
  bangs
super + i
  insert-bookmark
super + S
  toggle-screenkey

# which key is this?
XF86Tools
  xtouchpad -t; exec notify-send -t 1500 'toggled keyboard'
# XF86 keys: http://wiki.linuxquestions.org/wiki/XF86_keyboard_symbols
