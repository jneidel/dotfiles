set selection-clipboard clipboard
set selection-notification false
set scroll-page-aware false
set guioptions ""
set adjust-open width
set filemonitor noop

set default-bg "#1C1C1C"
set recolor-lightcolor "#1C1C1C"
map D set recolor

map d scroll half-down

map < navigate previous
map > navigate next

map n navigate next
map p navigate previous

# Emacs scroll
# Space/S-Space or
map <C-v> scroll full-down
map <A-v> scroll full-up
