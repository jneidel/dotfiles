#! /bin/bash

# todo: handle mpd error: No route to host
#  and use localhost instead

source ~/scripts/mpd/shared-mpd-variables

if [[ $1 = "--help" ]] || [[ $1 = "help" ]]; then
  echo "$ ncmpcpps"
  echo "Connect ncmpcpp to mpd running on this devices ip address"
  echo ""
  echo "Connection params:"
  echo "  -h $IP"
  echo "  -p $PORT"
  exit
fi

command -v ncmpcpp >/dev/null || { echo "ncmpcpp is not installed"; exit 1; }

ncmpcpp $CONNECT 2> /dev/null

