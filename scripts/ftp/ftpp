#! /bin/bash

DIR="$(dirname $0)"
source $DIR/ftp-base

if [ "$1" = "--help" ] || [ "$1" = "-h" ] || [ "$1" = "help" ]; then
  printf "$ ftpp
Connect to phone via sftp
"; exit
fi

command -v sftp >/dev/null || { echo "sftp is not installed"; exit 1; }

sshpass -p $SSHPASS -- sftp -P $PORT -i $HOME/.ssh/private -oHostKeyAlgorithms=+ssh-rsa $IP
