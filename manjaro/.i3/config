# i3 config

# colors
set $black #1c1d21
set $grey  #1c1c1c
set $white #d0d0d0

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# Set default desktop layout <stacking|tabbed|tiling>
workspace_layout stacking

# Configure border style <normal|1pixel|pixel xx|none|pixel>
new_window pixel 1
new_float normal

# Hide borders
hide_edge_borders none
for_window [class="^.*"] border none

# Font for window titles
font xft:yosemite-san-francisco 11

# Start a terminal
bindsym $mod+Return exec kitty

# Kill focused window
bindsym $mod+Shift+q kill

# Start program launcher
bindsym $mod+d exec ~/scripts/i3/rofi/rofi.sh

# Start audio mixer
bindsym $mod+Ctrl+m exec kitty pulsemixer

# Mac screen brightness controls
#bindsym XF86KbdBrightnessUp exec ~/scripts/mac/keyboard-backlight p +1
#bindsym XF86KbdBrightnessDown exec ~/scripts/mac/keyboard-backlight p -1
#bindsym XF86MonBrightnessUp exec ~/scripts/mac/backlight p +02
#bindsym XF86MonBrightnessDown exec ~/scripts/mac/backlight p -02

# Start applications
bindsym $mod+F1 exec chromium
bindsym $mod+F2 exec firefox-nightly
bindsym $mod+F5 exec kitty --class calcurse calcurse
bindsym $mod+F6 exec kitty ranger ~
bindsym $mod+F8 exec kitty --class cmus cmus
bindsym $mod+F9 exec keepassxc
# Connect to my servers
bindsym $mod+F3 exec kitty --class mosh mosh k
bindsym $mod+F4 exec kitty --class mosh uber
# exec sh -c "keepassxc &" & - to start in bg and then kill shell
# https://unix.stackexchange.com/a/302671

# Take screenshot
bindsym $mod+Print --release exec --no-startup-id i3-scrot -w
# bindsym $mod+Shift+Print --release exec --no-startup-id i3-scrot -s

# mpd control
bindsym XF86LaunchA exec ~/scripts/mpd/mpcc toggle
bindsym XF86Search exec ~/scripts/mpd/mpcc prev
bindsym XF86Explorer exec ~/scripts/mpd/mpcc next

# misc controls
bindsym XF86Tools exec xtouchpad -t; exec notify-send -t 1500 'toggled keyboard'
# XF86 keys: http://wiki.linuxquestions.org/wiki/XF86_keyboard_symbols
bindsym $mod+y exec ~/scripts/i3/clipboard/clipboard-add-yt-video.sh
bindsym $mod+v exec ~/scripts/open-clip-in-vlc
bindsym $mod+o exec ~/scripts/open-clip-in-browser

# Change window focus
focus_follows_mouse no
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Workspace back and forth
workspace_auto_back_and_forth yes
bindsym $mod+a workspace back_and_forth
bindsym $mod+Shift+a move container to workspace back_and_forth; workspace back_and_forth

# Split orientation
bindsym $mod+q split toggle

# Toggle fullscreen mode for focused
bindsym $mod+f fullscreen toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# Change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle sticky
# bindsym $mod+Shift+s sticky toggle
# focus the parent container
# bindsym $mod+a focus parent

