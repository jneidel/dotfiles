#bindsym XF86KbdBrightnessUp exec "backlight percent +1; notify-send 'backlight $(backlight get)'"
bindsym XF86KbdBrightnessUp exec ~/scripts/mac/keyboard-backlight p +1
#bindsym XF86KbdBrightnessDown exec "backlight percent-1; notify-send 'backlight $(backlight get)'"
bindsym XF86KbdBrightnessDown exec ~/scripts/mac/keyboard-backlight p -1

bindsym XF86MonBrightnessUp exec ~/scripts/mac/backlight p +02
bindsym XF86MonBrightnessDown exec ~/scripts/mac/backlight p -02

# Start Applications
bindsym $mod+F1 exec chromium
bindsym $mod+F2 exec firefox-nightly
bindsym $mod+F5 exec kitty --class calcurse calcurse
bindsym $mod+F6 exec kitty ranger ~
bindsym $mod+F8 exec kitty --class cmus cmus
bindsym $mod+F9 exec keepassxc
## connect to my servers
bindsym $mod+F3 exec kitty --class mosh mosh k
bindsym $mod+F4 exec kitty --class mosh uber
# exec sh -c "keepassxc &" & - to start in bg and then kill shell
# https://unix.stackexchange.com/a/302671

bindsym $mod+Ctrl+b exec terminal -e 'bmenu'
bindsym $mod+t exec --no-startup-id pkill compton
bindsym $mod+Ctrl+t exec --no-startup-id compton -b -f
bindsym $mod+Shift+d --release exec "killall dunst; exec notify-send 'restart dunst'"
bindsym $mod+Print --release exec --no-startup-id i3-scrot -w
# bindsym $mod+Shift+Print --release exec --no-startup-id i3-scrot -s
bindsym $mod+Shift+p exec xdg-open /usr/share/doc/manjaro/i3_help.pdf
bindsym $mod+Ctrl+x --release exec --no-startup-id xkill

bindsym XF86AudioMute exec ~/scripts/i3/volume/mute.sh
bindsym XF86AudioLowerVolume exec ~/scripts/i3/volume/set-vol.sh -5
bindsym XF86AudioRaiseVolume exec ~/scripts/i3/volume/set-vol.sh +5

bindsym XF86LaunchA exec ~/scripts/i3/cmus/play-pause.sh
bindsym XF86Search exec ~/scripts/i3/cmus/previous.sh
bindsym XF86Explorer exec ~/scripts/i3/cmus/next.sh

bindsym XF86Tools exec xtouchpad -t; exec notify-send -t 1500 'toggled keyboard'
# XF86 keys: http://wiki.linuxquestions.org/wiki/XF86_keyboard_symbols

bindsym $mod+y exec ~/scripts/i3/clipboard/clipboard-add-yt-video.sh
bindsym $mod+v exec ~/scripts/open-clip-in-vlc
bindsym $mod+o exec ~/scripts/open-clip-in-browser

# change focus
focus_follows_mouse no
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# workspace back and forth (with/without active container)
workspace_auto_back_and_forth yes
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth

# split orientation
#bindsym $mod+c split h
#bindsym $mod+v split v
bindsym $mod+q split toggle

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# toggle sticky
bindsym $mod+Shift+s sticky toggle

# focus the parent container
bindsym $mod+a focus parent

# move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

#navigate workspaces next / previous
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left workspace prev

# Workspace names
